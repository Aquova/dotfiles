{
    // OS Specific
    "terminal.external.osxExec": "kitty.app",

    // Language specific
    "python.pythonPath": "/usr/local/bin/python3",
    "python.linting.enabled": false,
    "files.associations": {
        "*.p8": "lua"
    },

    // VSCode sesttings
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "breadcrumbs.enabled": true,
    "debug.allowBreakpointsEverywhere": true,
    "editor.wordWrap":"on",
    "editor.minimap.enabled": false,
    "editor.occurrencesHighlight": false,
    "editor.selectionHighlight": false,
    "editor.parameterHints.enabled": false,
    "editor.cursorBlinking": "phase",
    "workbench.editor.enablePreview": false,
    "window.titleBarStyle": "custom",
    "workbench.colorCustomizations": {
        "statusBar.background": "#98c379",
        "statusBar.noFolderBackground": "#98c379",
        "statusBar.debuggingBackground": "#98c379"
    },
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "workbench.startupEditor": "none",

    // Requires the "Settings Cycler" extension
    "editor.lineNumbers": "on",
    "settings.cycle": [
        {
            "id": "lineNumber",
            "overrideWorkspaceSettings": false,
            "values": [
                {
                    "editor.lineNumbers": "relative",
                },
                {
                    "editor.lineNumbers": "on"
                }
            ]
        }
    ],

    // Vim settings
    "vim.easymotion": true,
    "vim.hlsearch": true,
    "vim.leader": ",",
    "vim.visualstar": true,
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.duration": 500,
    "vim.sneak": true,
    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.replace": "underline",
    "vim.statusBarColorControl": true,
    "vim.statusBarColors.normal":"#98c379",
    "vim.statusBarColors.insert":"#61afef",
    "vim.statusBarColors.visual":"#c678dd",
    "vim.statusBarColors.visualline":"#c678dd",
    "vim.statusBarColors.visualblock":"#c678dd",
    "vim.statusBarColors.replace":"#e06c75",
    // Vim Keybindings
    "vim.insertModeKeyBindings": [
        {
            "before":["j", "k"],
            "after":["<Esc>"]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["B"],
            "after": ["^"]
        },
        {
            "before": ["E"],
            "after": ["$"]
        },
        {
            "before": ["L"],
            "after": ["L", "z", "z"]
        },
        {
            "before": ["H"],
            "after": ["H", "z", "z"]
        },
        {
            "before": ["[", "["],
            "after": ["[", "[", "z", "z"]
        },
        {
            "before": ["]", "]"],
            "after": ["]", "]", "z", "z"]
        },
        {
            "before": ["[", "]"],
            "after": ["[", "]", "z", "z"]
        },
        {
            "before": ["]", "["],
            "after": ["]", "[", "z", "z"]
        },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["g", "r"],
            "after": [],
            "commands": [
                {
                    "command": "settings.cycle.lineNumber",
                    "args": []
                }
            ]
        },
        {
            "before": ["g", "p"],
            "after": [],
            "commands": [
                {
                    "command": "editor.debug.action.toggleBreakpoint",
                    "args": []
                }
            ]
        },
        {
            "before": ["g", "m"],
            "after": [],
            "commands": [
                {
                    "command": "markdown.showPreviewToSide",
                    "args": []
                }
            ]
        },
        {
            "before": ["g", "s"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.toggleSidebarVisibility",
                    "args": []
                }
            ]
        },
        {
            "before": ["]", "c"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.editor.nextChange",
                    "args": []
                }
            ]
        },
        {
            "before": ["[", "c"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.editor.previousChange",
                    "args": []
                }
            ]
        },
        {
            "before": ["[", "["],
            "after": ["[", "[", "z", "z"]
        },
        {
            "before": ["]", "]"],
            "after": ["]", "]", "z", "z"]
        },
        {
            "before": ["[", "]"],
            "after": ["[", "]", "z", "z"]
        },
        {
            "before": ["]", "["],
            "after": ["]", "[", "z", "z"]
        },
        {
            "before": ["B"],
            "after": ["^"]
        },
        {
            "before": ["E"],
            "after": ["$"]
        },
        {
            "before": ["Y"],
            "after": ["y", "$"]
        },
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        {
            "before": ["L"],
            "after": ["L", "z", "z"]
        },
        {
            "before": ["H"],
            "after": ["H", "z", "z"]
        },
        {
            "before": ["J"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.previousEditor",
                    "args": []
                }
            ]
        },
        {
            "before": ["K"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.nextEditor",
                    "args": []
                }
            ]
        },
        {
            "before": ["<leader>", "<space>"],
            "after": [],
            "commands": [
                {
                    "command": ":noh",
                    "args": []
                }
            ]
        },
        {
            "before": ["<leader>", "b", "d"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.closeActiveEditor",
                    "args": []
                }
            ]
        }
    ],

    // Other extension settings
    "gitlens.advanced.telemetry.enabled": false,
    "gitlens.currentLine.format": "${author}, ${agoOrDate}",
    "workbench.colorTheme": "Dracula",
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.files.associations": {
        "*.moon": "lua"
    },
    "material-icon-theme.folders.color": "#42a5f5",
}
